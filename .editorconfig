# EditorConfig는 코드 스타일을 일관되게 유지하기 위한 설정 파일입니다
# 자세한 정보: https://editorconfig.org

# 최상위 EditorConfig 파일임을 표시
root = true

# 모든 파일에 적용되는 기본 설정
[*]
charset = utf-8                    # 문자 인코딩: UTF-8 사용
end_of_line = crlf                 # 줄바꿈 문자: Windows 스타일 (CRLF)
insert_final_newline = true        # 파일 끝에 빈 줄 추가
trim_trailing_whitespace = true    # 줄 끝의 공백 제거
indent_style = space               # 들여쓰기 스타일: 스페이스 사용
indent_size = 4                    # 기본 들여쓰기 크기: 4칸

# C# 파일 설정
[*.cs]
indent_size = 4                    # 들여쓰기: 4칸

# 한글 주석 지원 설정
charset = utf-8                    # UTF-8로 한글 주석 지원

# C# 코딩 컨벤션
csharp_new_line_before_open_brace = all                    # 중괄호 앞 새 줄
csharp_new_line_before_else = true                         # else 앞 새 줄
csharp_new_line_before_catch = true                        # catch 앞 새 줄
csharp_new_line_before_finally = true                      # finally 앞 새 줄

# JSON 파일 설정
[*.json]
indent_size = 2                    # JSON은 2칸 들여쓰기

# XML/YAML 파일 설정 (Unity 메타 파일 등)
[*.{xml,yml,yaml}]
indent_size = 2                    # 2칸 들여쓰기

# Unity 메타 파일
[*.meta]
indent_size = 2                    # 2칸 들여쓰기

# 셰이더 파일
[*.shader]
indent_size = 4                    # 4칸 들여쓰기

# 마크다운 파일
[*.md]
trim_trailing_whitespace = false   # 마크다운에서는 줄 끝 공백 유지 (문법상 필요)